---
import Title from './Title.astro'
import Shape from './icons/Shape.astro'
type Props = {
	title: string
}
const { title } = Astro.props
---

<!-- <div class='flex justify-start items-center gap-2 title'>
	<Shape />
	<Title>{title}</Title>
</div> -->
<div class='flex justify-start items-center gap-2 title'>
	<Shape />
	<Title>{title}</Title>
	<a
		target='_blank'
		href='/rss.xml'
		class='rss-link hidden sm:block'
		aria-label='rss feed'
		title='RSS Feed'
	>
		<svg xmlns='http://www.w3.org/2000/svg' class='rss-icon' fill='url("#SvgjsLinearGradient3010")'
			><path d='M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z'></path><path
				d='M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z'></path><circle
				cx='6'
				cy='18'
				r='2'></circle>
		</svg>
	</a>
</div>
